q1 

#include <cstring>
#include <iostream>
using namespace std;
char s3[100];
char s4[100];
bool ehIgual(char s1[],char s2[]);
int main(){
    int resposta;
    char s1[100];
    char s2[100];
    cout<<"Digite a primeira string: "<<endl;
    cin.getline(s1,100);
    cout<<"Digite a segunda string: "<<endl;
    cin.getline(s2,100);
    if(strlen(s1)==strlen(s2)){
    resposta = ehIgual(s1,s2);
    if(resposta==1){
        cout<<s3<<"=="<<s4<<endl;
    }
    else cout<<s3<<"!="<<s4<<endl;
    }
    else cout<<s3<<"!="<<s4<<endl;

}
bool ehIgual(char s1[100],char s2[100]){
    int i=0,TAM = strlen(s1),TAM2 = strlen(s2),cont=0,cont2=0,j=0;

    for(j=0;j<TAM;j++){
        s3[j]=s1[j];
        s4[j]=s2[j];
    }
    for(i=0;i<TAM;i++){
        if(s1[i]>='a' && s1[i]<='z'){
         s1[i]-=32;
        }
        if(s2[i]>='a' && s2[i]<='z'){
        s2[i]-=32;
        }
        if(s1[i]==s2[i]){
            cont+=1;
        }
    }

        if(cont==TAM){
            return true;
        }
        else{
            return false;
        }
    for(j=0;j<TAM;j++){
        s1[j]=s3[j];
        s2[j]=s4[j];
    }
}


q2

#include <cstring>
#include <iostream>
using namespace std;

bool teste(char p1[]);
int main(){
    char p1[100];
    int resposta;
    cout<<"Entre com a palavra: "<<endl;
    cin.getline(p1,100);
    resposta = teste(p1);
    if(resposta==1){
        cout<<"Eh polidromo!"<<endl;
    }
    else cout<<"Nao eh polidromo!"<<endl;
}
bool teste(char p1[]){
    int i=0,j=0,cont=0;
    for(i=0,j=strlen(p1)-1;i<strlen(p1);i++,j--){
            if(p1[i]==p1[j]){
                cont+=1;
        }
    }
    if(cont==strlen(p1)){
        return true;
    }
    else
        return false;
}
   
