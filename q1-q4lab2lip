QUESTAO 1

#include <iostream>
using namespace std;
int main(){
int quant,n,media,i,soma;
cout<<"Entre com a quantidade";
cin>>quant;
for(i=0;i<quant;i++){
    cout<<"Entre com os numeros";
    cin>>n;
    soma = soma + n;
}
   media = soma/quant;

cout<<media;
return 0;
}

QUESTAO 2

#include <iostream>
using namespace std;
int main(){
int x,cont,i;
cout<<"Entre com o numero";
cin>>x;
cont=0;
for(i=1;i<x;i++){
        if(x%i==0){
        cont+=1;
        }
}
if(cont<=2){
    cout<<"O numero "<<x<<" eh primo";
}
else{
    cout<<"O numero "<<x<<" nao eh primo";
}
return 0;
}

QUESTAO 3

#include <iostream>
using namespace std;
int main()
{
    int n1,n2,cont;
    float pot;
    cout<<"entre com os numeros";
    cin>>n1>>n2;
    cont=0;
    pot=1;
    if(n2>0)
    {
        do
        {
            pot=pot*n1;
            cont+=1;
        }
        while(cont<n2);
        cout<<pot;
    }
    else
    {
        do
        {
            pot=pot*n1;
            cont+=1;
        }
        while(cont<-n2);
        cout<<1/pot;
    }
    return 0;
}

QUESTAO 4

#include <iostream>
using namespace std;
int main()
{
    int x,menor;

    cout<<"Entre com os numeros ai bixim";
    cin>>x;
    menor=x;
    while(x!=0)
    {

        cin>>x;
            if(x<menor)
            {
                menor=x;
            }

    }
    cout<<menor;
    return 0;
}
